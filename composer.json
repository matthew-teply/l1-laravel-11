{
    "name": "renoki-co/l1",
    "description": "Laravel integration for Cloudflare Workers services.",
    "keywords": [
        "laravel",
        "php",
        "database",
        "query",
        "sqlite",
        "cloudflare",
        "d1",
        "kv",
        "r2",
        "workers",
        "serverless",
        "serverless functions",
        "serverless framework",
        "serverless architecture"
    ],
    "license": "Apache-2.0",
    "homepage": "https://github.com/renoki-co/l1",
    "authors": [
        {
            "name": "Alex Renoki",
            "homepage": "https://github.com/rennokki",
            "role": "Developer"
        }
    ],
    "require": {
        "doctrine/dbal": "^3.6",
        "illuminate/cache": "^11",
        "illuminate/database": "^11",
        "saloonphp/laravel-http-sender": "^3",
        "saloonphp/laravel-plugin": "^3.5",
        "saloonphp/saloon": "^3"
    },
    "suggest": {
        "ext-pdo": "Required to extend the PDO driver for Cloudflare D1."
    },
    "autoload": {
        "psr-4": {
            "RenokiCo\\L1\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RenokiCo\\L1\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "require-dev": {
        "laravel/legacy-factories": "^1",
        "mockery/mockery": "^1",
        "orchestra/testbench": "^9",
        "phpunit/phpunit": "^11"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "extra": {
        "laravel": {
            "providers": [
                "RenokiCo\\L1\\L1ServiceProvider"
            ]
        }
    }
}
